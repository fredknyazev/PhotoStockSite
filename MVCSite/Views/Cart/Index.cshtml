@model IEnumerable<MVCSite.Models.CartItem>

@{
    ViewBag.Title = "Index";
}

<h2>Ваши товары</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SelectPhoto.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectPhoto.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectPhoto.PhotoSource)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SelectPhoto.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectPhoto.Price)
            </td>
            <td>
                <img src="@Url.Action("GetImage", "Home", new { Id=item.SelectPhoto.Id })" style="max-width:100%;height:auto" />
            </td>
            <td>
                
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    <tr>
        <td> Итого: </td>
        <td></td>
        <td>@ViewBag.Total</td>
        <td></td>
    </tr>
</table>
<br />
<hr />
<br />
