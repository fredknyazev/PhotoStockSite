@model MVCSite.Models.CartItem

@{
    ViewBag.Title = "Edit";
}

<h2>Изменить </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Вы заказываете:</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CartId)
        @Html.HiddenFor(model => model.PhotoId)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectPhoto.PhotoSource, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="@Url.Action("GetImage", "Home", new { Id=Model.SelectPhoto.Id })" style="max-width:100%;height:auto" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectPhoto.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.SelectPhoto.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку покупок", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
